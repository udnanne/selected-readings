<style is:global lang="scss">
    footer {
        background-color: var(--quinary-color);
        border-top: 1px solid var(--senary-color);

        .container {
            margin: 0 auto;
            padding-block: 40px;
            display: flex;
            justify-content: space-between;

            @media (max-width: $tablet) {
                flex-direction: column;
                gap: 15px;
                padding-block: 30px;
            }
        }

        .left-half {
            @media (max-width: $desktop) {
                padding-inline: 20px;
            }

            p {
                font-size: 14px;
                letter-spacing: 0.5px;
                margin-block: 10px;
                color: #000;

                @media (max-width: $tablet) {
                    font-size: 12px;
                }

                &:first-of-type {
                    margin-block-start: 20px;

                    @media (max-width: $tablet) {
                        margin-block-start: 15px;
                    }
                }

                &:last-of-type {
                    margin-block-end: 0;
                }
            }
        }

        .right-half {
            display: flex;
            gap: 40px;

            @media (max-width: $desktop) {
                padding-inline: 20px;
            }

            @media (max-width: $tablet) {
                gap: 20px;
            }
        }

        .logo {
            display: flex;
            width: fit-content;

            img {
                @media (max-width: $tablet) {
                    width: 133px;
                    height: 30px;
                }
            }
        }

        .qrcode {
            @media (max-width: $tablet) {
                width: 80px;
                height: 80px;
            }
        }

        .fb-page {
            width: 300px;
            height: 110px;
            background-color: white;

            @media (max-width: $tablet) {
                width: 218px;
                height: 80px;
            }
        }

        .links {
            background-color: var(--quaternary-color);
            margin: 0;
            padding-block: 10.5px;
            padding-inline: 20px;
            display: flex;
            justify-content: center;
            color: white;
            font-weight: var(--weight-light);
            font-size: 13px;
            letter-spacing: 2px;

            @media (max-width: $tablet) {
                padding-block: 12px;
                font-size: 12px;
                letter-spacing: 0.5px;
            }

            @media (max-width: $smallMobile) {
                flex-wrap: wrap;
                gap: 5px;
            }

            &-left,
            &-right {
                display: flex;
                align-items: center;

                @media (max-width: $smallMobile) {
                    width: 100%;
                }
            }

            p {
                margin-block: 0;
                line-height: 1.462;

                @media (max-width: $tablet) {
                    line-height: 1.417;
                }
            }

            a {
                color: white;
                margin-inline: 11px;
                position: relative;
                display: inline-block;
                line-height: 1.462;

                @media (max-width: $tablet) {
                    line-height: 1.417;
                }

                &:hover {
                    text-decoration: underline;
                    text-underline-offset: 4px;
                }
            }

            &-left a {
                margin-inline: 15px 11px;

                @media (max-width: $tablet) {
                    margin-inline-start: 12px;
                }
            }

            &-right a {
                &::before {
                    content: "";
                    position: absolute;
                    bottom: 4px;
                    left: -12px;
                    width: 1px;
                    height: 11px;
                    background-color: white;
                }

                &:last-child {
                    margin-inline-end: 0;
                }

                &:first-child {
                    @media (max-width: $smallMobile) {
                        margin-inline-start: 0;
                    }

                    &::before {
                        @media (max-width: $smallMobile) {
                            content: none;
                        }
                    }
                }
            }
        }
    }

    @keyframes wobble {
        16.65% {
            transform: translateY(6px);
        }

        33.33% {
            transform: translateY(-5px);
        }

        49.95% {
            transform: translateY(4px);
        }

        66.6% {
            transform: translateY(-2px);
        }

        83.25% {
            transform: translateY(1px);
        }

        100% {
            transform: translateY(0);
        }
    }

    .gotop {
        display: none;
        position: fixed;
        z-index: 1;
        bottom: 115px;
        right: 4%;
        border-radius: 50%;
        cursor: pointer;
        transform: translateZ(0);
        transition: all 0.15s ease-in;

        &:hover {
            animation-duration: 1s;
            animation-iteration-count: 1;
            animation-name: wobble;
            animation-timing-function: linear;
        }

        @media (max-width: $desktop) {
            right: 2%;
        }

        @media (max-width: $tablet) {
            bottom: 285px;
        }

        @media (max-width: $mobile) {
            right: 20px;
        }
    }

    .gotop-block {
        display: block;
    }
</style>

<script>
    const toTop = document.querySelector(".gotop");

    window.onscroll = function () {
        if (
            document.documentElement.scrollTop >= 200 ||
            document.body.scrollTop >= 200
        ) {
            toTop.classList.add("gotop-block");
        } else {
            toTop.classList.remove("gotop-block");
        }
    };

    toTop.addEventListener("click", function (e) {
        window.scrollTo({ top: 0, behavior: "smooth" });
    });
</script>
