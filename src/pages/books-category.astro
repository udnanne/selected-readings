---
import Layout from "../layouts/Layout.astro";
import Title from "../components/Title.astro";
import Aside, { getDefaultList } from "../components/Aside.astro";
import Filter from "../components/Filter.astro";
import Card from "../components/Card.astro";
import PageController from "../components/PageController.astro";
import "../styles/title.scss";
import "../styles/slider.scss";
import "../styles/card.scss";
import "../styles/guide.scss";

const defaultList = getDefaultList("books-category");
---

<Layout title="當屆獲選書單">
    <main>
        <div class="container breadcrumb">
            <nav>
                <a href="/">首頁</a> / <a href="/books">選書指南</a> / <a
                    href="/books-category">當屆獲選書單</a
                >
            </nav>
        </div>

        <div class="container">
            <div class="guide books">
                <aside>
                    <Aside type="books-category" />
                </aside>

                <div class="main-content">
                    <div class="top-part">
                        <Title title={defaultList} classname="books" />

                        <Filter
                            search="獲選書籍"
                            cate={defaultList}
                            catebtn={defaultList}
                            featured={false}
                        />
                    </div>

                    <div class="middle-part results">
                        {Array.from({ length: 20 }, (_, i) => <Card key={i} />)}
                    </div>

                    <div class="bottom-part page-controller">
                        <PageController />
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>
